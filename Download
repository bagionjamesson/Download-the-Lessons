<body>
    <div class="portal-container">
        <h1>Download and Answer the Following</h1>
        
        <div class="resource-section">
            
            <div class="resource-card">
                <p class="subject">Subject: Music History üé∂</p>
                <h2>Download: History Background of Romantic Music</h2>
                <p>This comprehensive paper explores the social, cultural, and political influences that shaped the Romantic era in music (1800‚Äì1910).</p>
                
                <button id="musicDownloadButton" class="download-btn">
                    <span class="icon">‚¨áÔ∏è</span> Download Music Resource
                </button>
            </div>

            <div class="resource-card">
                <p class="subject">Subject: Health & Ethics ‚öïÔ∏è</p>
                <h2>Download: A Day That Taught a Lesson</h2>
                <p>A case study analyzing an important situation and the health-related lesson it imparts, focusing on personal responsibility and ethical decisions.</p>
                
                <button id="healthDownloadButton" class="download-btn">
                    <span class="icon">‚¨áÔ∏è</span> Download Health Resource
                </button>
            </div>

        </div>
    </div>

    <script>
        // --- JavaScript Functionality ---
        document.addEventListener('DOMContentLoaded', () => {
            
            // Define download URLs for each resource
            // üõë IMPORTANT: REPLACE THESE PLACEHOLDER URLs WITH YOUR ACTUAL FILES!
            const resources = {
                music: {
                    button: document.getElementById('musicDownloadButton'),
                    url: 'https://example.com/romantic_music_history.pdf', // REPLACE
                    initialText: '<span class="icon">‚¨áÔ∏è</span> Download Music Resource',
                    downloadingText: '<span class="icon">‚è≥</span> Preparing Music File...',
                    successText: '<span class="icon">‚úÖ</span> Music Download Started!',
                    fileName: 'Romantic_Music_History.pdf'
                },
                health: {
                    button: document.getElementById('healthDownloadButton'),
                    url: 'https://example.com/day_that_taught_a_lesson.doc', // REPLACE
                    initialText: '<span class="icon">‚¨áÔ∏è</span> Download Health Resource',
                    downloadingText: '<span class="icon">‚è≥</span> Preparing Health File...',
                    successText: '<span class="icon">‚úÖ</span> Health Download Started!',
                    fileName: 'A_Day_That_Taught_a_Lesson.doc'
                }
            };

            const downloadFile = (resourceKey) => {
                const res = resources[resourceKey];
                const button = res.button;

                // Guard against multiple clicks
                if (button.classList.contains('downloading') || button.classList.contains('success')) {
                    return;
                }

                // 1. Change to 'downloading' state
                button.classList.remove('download-btn');
                button.classList.add('downloading');
                button.innerHTML = res.downloadingText;

                // 2. Wait 2 seconds
                setTimeout(() => {
                    // 3. Initiate the file download
                    const link = document.createElement('a');
                    link.href = res.url;
                    link.setAttribute('download', res.fileName); // Set custom filename
                    
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);

                    // 4. Change to 'success' state
                    button.classList.remove('downloading');
                    button.classList.add('success');
                    button.innerHTML = res.successText;

                    // 5. Revert the button back to the original state after 5 seconds
                    setTimeout(() => {
                        button.classList.remove('success');
                        button.classList.add('download-btn');
                        button.innerHTML = res.initialText;
                    }, 5000); 

                }, 2000); // 2-second delay
            };
            
            // Attach listeners to both buttons
            resources.music.button.addEventListener('click', () => downloadFile('music'));
            resources.health.button.addEventListener('click', () => downloadFile('health'));
        });
    </script>
</body>
